@model FiresportCalendar.Models.Event
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <h2>Editace akce</h2>

    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Place" class="control-label"></label>
            <input asp-for="Place" class="form-control" />
            <span asp-validation-for="Place" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DateTime" class="control-label"></label>
            <input asp-for="DateTime" class="form-control" type="datetime-local" />
            <span asp-validation-for="DateTime" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <input type="submit" value="Uložit" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Zrušit</a>
        </div>
    </form>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
}
